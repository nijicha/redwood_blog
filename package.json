{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^1.2.0",
    "husky": ">=6",
    "lint-staged": ">=10"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.0",
  "lint-staged": {
    "(web|api)/src/**/*{js,jsx,ts,tsx}": "yarn rw lint --fix"
  },
  "scripts": {
    "postinstall": "husky install",
    "prettier": "prettier --write ."
  }
}
